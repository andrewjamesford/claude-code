{
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -d \"Claude needs your attention\" ntfy.sh/$NTFY_TOPIC"
          }
        ]
      }
    ]
  },
  "permissions": [
    "Task",
    "Bash",
    "Glob",
    "Grep",
    "LS",
    "Read",
    "Edit",
    "MultiEdit",
    "Write",
    "WebFetch",
    "WebSearch"
  ],
  "deny": [
    "Bash(rm)"
  ],
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[44m\\033[30m %s \\033[0m' \"$(basename \"$(pwd)\")\""
  }
}
